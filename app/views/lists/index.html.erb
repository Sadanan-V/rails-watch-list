<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExMjd5NDU4cmxnc3NzeWN1dW5pbzJjbTM2cHhuejNqc29kcWJ2NW9tdiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/12Zv57OF16CQg/giphy.webp);">
  <div class="container">
    <h1 class="mb-1 ms-4">All Lists</h1>
    <%= link_to "Add List", new_list_path, class:"btn btn-info m-4"  %>
  </div>
</div>


<div class="mt-3">
  <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://thumbor.forbes.com/thumbor/fit-in/900x510/https://www.forbes.com/health/wp-content/uploads/2023/10/Healthy-Breakfast-Ideas-6-Foods-To-Start-Your-Day-Ft-Image.jpg' %>)">
          <%= link_to list.name.upcase, list_path(list), class:"text-white text-decoration-none" %>
          <%= link_to lists_path(list), data: { turbo_method: :destroy, turbo_confirm: "Want to delete #{list.name}?"} do %>
            <i class="fa-solid fa-meteor position-absolute bottom-0 end-0 pb-2 px-2" style="color: #ffffff;"></i>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
